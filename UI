import tkinter as tk
from tkinter import scrolledtext

def translate():
    original_text = text_input.get("1.0", tk.END).strip()
    translated_text = f"[Translated] {original_text}"  # 仮の翻訳処理
    text_output.delete("1.0", tk.END)
    text_output.insert(tk.END, translated_text)

# メインウィンドウ作成
root = tk.Tk()
root.title("Dublungo Translator")
root.geometry("600x400")

# 入力エリア
label_input = tk.Label(root, text="原文:")
label_input.grid(row=0, column=0, padx=10, pady=5, sticky=tk.W)
text_input = scrolledtext.ScrolledText(root, width=40, height=10)
text_input.grid(row=1, column=0, padx=10, pady=5)

# 翻訳結果エリア
label_output = tk.Label(root, text="翻訳結果:")
label_output.grid(row=0, column=2, padx=10, pady=5, sticky=tk.W)
text_output = scrolledtext.ScrolledText(root, width=40, height=10)
text_output.grid(row=1, column=2, padx=10, pady=5)

# 翻訳ボタン
translate_button = tk.Button(root, text="翻訳", command=translate)
translate_button.grid(row=1, column=1, padx=10, pady=5)

# メインループ実行
root.mainloop()
